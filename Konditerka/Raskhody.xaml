<Window x:Class="Konditerka.Raskhody"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konditerka"
        mc:Ignorable="d"
        Title="Raskhody" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DataGrid Name="naklad" 
                  AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
                  AutoGenerateColumns="True" 
Margin="10"
RowHeight="NaN"
ColumnWidth="*"
ScrollViewer.CanContentScroll="False"
ScrollViewer.IsDeferredScrollingEnabled="True"/>

        <Popup Name="newNaklPopup" Placement="Mouse" StaysOpen="False">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Новая статья расхода:" FontWeight="Bold" FontSize="14"/>
                    <TextBox Name="newNaklPop" Width="150" Margin="0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Сохранить" Click="Save_Click" Margin="0,0,5,0"/>
                        <Button Content="Отмена" IsCancel="True" Click="KolichOtmena" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <Button Grid.Row="1" Content="Сохранить" Margin="10" Click="save"/>
        <Button Grid.Row="2" Content="Добавить расходы" Margin="10" Click="newNakl"/>

    </Grid>
</Window>
