<Page x:Class="Konditerka.SostZak"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Konditerka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SostZak">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>            <!-- Заголовок и кнопка -->
            <RowDefinition Height="*"/>            <!-- Таблица -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="← Назад" Click="BackZakBtn_Click" Width="70" Margin="0,0,20,0"/>
            <TextBlock Name="SostZakHeader" 
               Foreground="Black" FontSize="18" 
               FontWeight="Bold" FontStyle="Italic" 
               VerticalAlignment="Center"/>
        </StackPanel>

        <DataGrid x:Name="DataGridSostZak" Grid.Row="1"
          IsReadOnly="True"
          AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
          AutoGenerateColumns="True" Margin="10" 
          RowHeight="NaN" ColumnWidth="*"
          ScrollViewer.CanContentScroll="False" 
          ScrollViewer.IsDeferredScrollingEnabled="True"/>
    </Grid>
</Page>
