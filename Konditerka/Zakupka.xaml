<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konditerka"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Konditerka.Zakupka"
        mc:Ignorable="d"
        Title="Zakupka" Height="250" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Background ="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Ингредиент" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="33" Width="101"/>
        <Label Grid.Column="1" Content="Количество" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="33" Width="101"/>
        <Label Grid.Column="2" Content="Стоимость" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="33" Width="92"/>
        <Label Grid.Column="3" Content="Ед.Измерения" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <TextBox Grid.Row="1" x:Name="TextIngr" Margin="5" TextChanged="TextIngr_TextChanged" FontSize="16" />
        <ListBox Grid.Row="2" x:Name="IngrList" Margin="5"  SelectionChanged="IngrList_SelectionChanged" FontSize="14" Cursor="Hand"/>
        <DataGrid x:Name="DGIngr" AutoGenerateColumns="True" Grid.Row="2" Grid.Column="1" Margin="5,5,10,5" Visibility="Collapsed"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="Count" Margin="5" FontSize="16"/>
        <TextBox Grid.Row="1" Grid.Column="2" x:Name="Price" Margin="5" FontSize="16"/>

        <Grid Name="Date" Visibility="Collapsed" Grid.Row="2" Grid.Column="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Дата покупки" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="1" Name="datePicker1" IsDropDownOpen="False" SelectedDateFormat="Short" Margin="10,10,10,45"/>
        </Grid>

        <ComboBox x:Name="EdIzm" Grid.Column="3" Grid.Row="1" Margin="5" FontSize="14" >
            <ComboBoxItem Content="гр"/>
            <ComboBoxItem Content="шт"/>
            <ComboBoxItem Content="мл"/>
        </ComboBox>
        <Button Grid.Column="3" Grid.Row="2" x:Name="Save" Content="Сохранить" Background="Chocolate" Click="Save_Click" Margin="5,25,5,5"/>
    </Grid>
</mah:MetroWindow>
