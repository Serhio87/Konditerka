<mah:MetroWindow x:Class="Konditerka.CreateZak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:local="clr-namespace:Konditerka"
        mc:Ignorable="d"
        Title="CreateZak" Height="900" Width="800" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:DifferenceToBackgroundConverter x:Key="DiffConverter"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
        
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Панель дата/время -->
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="#F9F9F9" HorizontalAlignment="Left" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <!-- Основная панель отображения -->
                    <StackPanel x:Name="DisplayPanel" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="#555" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Дата и время заказа:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#333"/>
                        <TextBlock Name="LabelDate" Text="00.00.0000 00:00" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#007ACC" FontWeight="Bold"/>
                        <Button Name="ChangeTime" Content="" FontFamily="Segoe MDL2 Assets" ToolTip="Изменить" Margin="20,0,0,0" Click="ChangeTime_Click" Background="Transparent" BorderBrush="Transparent" Foreground="#007ACC" Cursor="Hand"/>
                        <TextBlock x:Name="kommb" Text="Комментарии:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#333"/>
                        <TextBox x:Name="komment" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#333"/>
                    </StackPanel>

                    <!-- Выдвижная панель с анимацией -->
                    <StackPanel x:Name="EditPanel" Orientation="Horizontal" Visibility="Collapsed" Opacity="0" Margin="0,0,0,0">
                        <StackPanel.RenderTransform>
                            <TranslateTransform x:Name="EditPanelTransform" X="-20"/>
                        </StackPanel.RenderTransform>

                        <TextBlock Text="|" Foreground="#CCC" VerticalAlignment="Center" Margin="10,0,10,0"/>
                        <TextBox x:Name="EditDateBox" Width="130" VerticalAlignment="Center" Padding="3"/>
                        <Button Content="OK" Margin="5,0,0,0" Click="SaveTime_Click" Background="#4CAF50" Foreground="White" Width="40"/>
                        <Button Content="✕" Margin="5,0,0,0" Click="CancelEdit_Click" Background="#F44336" Foreground="White" Width="30"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Панель клиент -->
            <Border Grid.Row="1" BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="#F9F9F9" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <StackPanel Orientation="Horizontal">
                    <StackPanel Name="Kli" Orientation="Horizontal" VerticalAlignment="Top">
                        <TextBlock Text="Клиент:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>
                        <ComboBox x:Name="Klients" SelectedValuePath="Id_Klient" IsEditable="True" IsReadOnly="True" FontSize="14" 
                                  Text="Выберите или добавьте клиента" VerticalAlignment="Center" Margin="5,0,5,0"/>
                        <Button Name="New" Content="Добавить" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="14" Click="New_Click"/>
                    </StackPanel>
                    <!-- Выдвижная панель с анимацией -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- StackPanel теперь занимает 0-ю строку, которая подстроится под его высоту -->
                        <StackPanel Grid.Row="0" x:Name="EditKli" Orientation="Vertical" Visibility="Collapsed" Opacity="0" Margin="20,0,0,0" >
                            <StackPanel.RenderTransform>
                                <TranslateTransform x:Name="EditPanelTransformKli" X="-20"/>
                            </StackPanel.RenderTransform>

                            <!-- Заголовок -->
                            <TextBlock Text="Введите данные нового клиента:" Foreground="#555" FontWeight="Bold" Margin="10,0,0,0" FontSize="14"/>

                            <!-- Поля ввода -->
                            <TextBlock Text="Имя:" Margin="10,5,10,0" FontSize="14"/>
                            <TextBox x:Name="Name" Width="200" HorizontalAlignment="Left" Margin="10,0" Padding="3" FontSize="14"/>

                            <TextBlock Text="Номер телефона:" Margin="10,10,10,0" FontSize="14"/>
                            <TextBox x:Name="Tel" Width="200" Margin="10,0" FontSize="14" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="+375 (__) ___-__-__" mah:TextBoxHelper.ClearTextButton="True">
                            </TextBox>

                            <TextBlock Text="Адрес:" Margin="10,10,10,0" FontSize="14"/>
                            <TextBox x:Name="Adr" Width="200" HorizontalAlignment="Left" Margin="10,0" Padding="3" FontSize="14"/>
                            <!-- Кнопки в горизонтальном стеке внизу -->
                            <StackPanel Orientation="Horizontal" Margin="10,20,0,0">
                                <Button Content="OK" Click="SaveKli_Click" Background="#4CAF50" Foreground="White" Width="60" Height="30"/>
                                <Button Content="✕" Margin="10,0,0,0" Click="CancelKli_Click" Background="#F44336" Foreground="White" Width="40" Height="30"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        
            <Border Grid.Row="2" BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="#F9F9F9" HorizontalAlignment="Left" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <TextBlock Text="Наименование:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>
                    <ComboBox x:Name="NaimCombo" SelectedValuePath="Id" IsEditable="True" IsReadOnly="True" FontSize="14" Text="Выберите вкусняшку" VerticalAlignment="Center" Margin="5,0,5,0" SelectionChanged="NaimCombo_SelectionChanged"/>
                    <TextBlock Text="Вес торта/Количество:" VerticalAlignment="Center" Margin="15,0,5,0" FontSize="14"/>
                    <TextBox x:Name="VesTorta" FontSize="14" VerticalAlignment="Center" Margin="5,0,5,0" mah:TextBoxHelper.Watermark="кг/шт" KeyUp="VesTorta_KeyUp"/>

                </StackPanel>
            </Border>

            <Border Grid.Row="3" x:Name="BorderOpis" Visibility="Collapsed" BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="#F9F9F9" HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <TextBlock Name="Opis" Width="700" Height="Auto" VerticalAlignment="Center" Margin="5" FontSize="14" Visibility="Collapsed" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Grid Grid.Row="4" x:Name="Grid_Ingr" Background="#FFE5E5E5" Visibility="Collapsed" Margin="5" >
                <!-- Добавляем DataGrid с именем для доступа из кода -->
                <DataGrid x:Name="DataGrid_Ingr" 
              AutoGenerateColumns="True" 
              IsReadOnly="True"
              Margin="10"
              AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
              RowHeight="NaN"
              ColumnWidth="*"
              GridLinesVisibility="Vertical"
              ScrollViewer.CanContentScroll="False"
              ScrollViewer.IsDeferredScrollingEnabled="True">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource MahApps.Styles.DataGridRow}">
                            <Setter Property="Background" 
                        Value="{Binding [Разница], Converter={StaticResource DiffConverter}}" />
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.ContextMenu>
                        <ContextMenu Name="ContMenu">
                            <MenuItem Name="Change" Header="Заменить" Click="Change_Click" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                </DataGrid>

                <Popup Name="ChangeRecipPopup" Placement="Mouse" StaysOpen="False">
                    <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Выберите ингредиент:"/>
                            <ComboBox Name="EditBox" Width="Auto" MaxWidth="900" Height="Auto" MaxHeight="400" Margin="0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Сохранить" Click="Save_Click" />
                                <Button Content="Отмена" IsCancel="True" Click="Cancel_Click" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>
            
            </Grid>

            <Border Grid.Row="5" BorderBrush="#CCC" BorderThickness="2" CornerRadius="2" Margin="5" Background="#F9F9F9" 
HorizontalAlignment="Stretch" MaxWidth="780" VerticalAlignment="Center" Visibility="Collapsed" Name="DecBord">
                <TextBlock Text="Декорирование торта:" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontSize="16" />
            </Border>

            <GroupBox Grid.Row="6" Margin="5" MaxWidth="780" Visibility="Collapsed" Name="DecBox">
                <StackPanel>
                    <!-- Список  -->
                    <ItemsControl Name="DecorsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <ComboBox Name="ComboDecor" Margin="5,0" FontSize="14" mah:TextBoxHelper.Watermark="Выберите декор" 
                                     DisplayMemberPath="name_decor" Loaded="ComboDecor_Loaded"
                                     SelectedItem="{Binding SelectedType, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBox Grid.Column="1" Margin="5,0" FontSize="14" mah:TextBoxHelper.Watermark="Количество" 
                                     Text="{Binding Kolich, UpdateSourceTrigger=PropertyChanged}"/>

                                    <!-- Кнопка удаления строки -->
                                    <Button Grid.Column="2" Content="✕" Background="Transparent" BorderThickness="0" Foreground="Red" Click="RemoveDec_Click" Tag="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Кнопка добавления -->
                    <Button Content="+ Добавить" 
                HorizontalAlignment="Left" 
                Margin="5,10,5,0" 
                Click="AddDec_Click" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"/>
                </StackPanel>
            </GroupBox>

            <Border Grid.Row="7" BorderBrush="#CCC" BorderThickness="2" CornerRadius="2" Margin="5" Background="#F9F9F9" 
HorizontalAlignment="Stretch" MaxWidth="780" VerticalAlignment="Center" Visibility="Collapsed" Name="UpBord">
                <TextBlock Text="Упаковка:" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontSize="16" />
            </Border>

            <GroupBox Grid.Row="8" Margin="5" MaxWidth="780" Visibility="Collapsed" Name="UpBox">
                <StackPanel>
                    <!-- Список  -->
                    <ItemsControl Name="UpList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <ComboBox Name="ComboUp" Margin="5,0" FontSize="14" mah:TextBoxHelper.Watermark="Выберите упаковку" 
                                     DisplayMemberPath="nazvanie" Loaded="ComboUp_Loaded"
                                     SelectedItem="{Binding SelectedTypeUpak, UpdateSourceTrigger=PropertyChanged}"/>
        
                                    <TextBox Grid.Column="1" Margin="5,0" FontSize="14" mah:TextBoxHelper.Watermark="Количество" 
                                     Text="{Binding Kolich_up, UpdateSourceTrigger=PropertyChanged}"/>
    
                                    <!-- Кнопка удаления строки -->
                                    <Button Grid.Column="2" Content="✕" Background="Transparent" BorderThickness="0" Foreground="Red" Click="RemoveUp_Click" Tag="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Кнопка добавления -->
                    <Button Content="+ Добавить" 
                    HorizontalAlignment="Left" 
                    Margin="5,10,5,0" 
                    Click="AddUp_Click" 
                    Style="{StaticResource MahApps.Styles.Button.Flat}"/>
                </StackPanel>
            </GroupBox>

            <StackPanel Grid.Row="9" Orientation="Horizontal">
                <TextBlock Text="Внесенная предоплата:" Margin="5" FontSize="18" FontWeight="Bold"/>
                <TextBox Name="pred" Text="0" Margin="5" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="рублей" Margin="5" FontSize="18" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Grid.Row="10" Orientation="Horizontal">
                <Button Content="Вычислить" Name="all" Click="all_Click" Margin="5"/>
                <TextBlock Text="Стоимость изделия = " Margin="5" FontSize="18" FontWeight="Bold"/>
                <TextBlock Name="itog" Margin="5" FontSize="18" FontWeight="Bold"/>
            </StackPanel>
            
            <Grid Grid.Row="11" VerticalAlignment="Center" HorizontalAlignment="Center"> 
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Text="Себестоимость изделия = " Margin="5"/>
                <TextBlock Grid.Row="1" Text="Стоимость декора = " Margin="5"/>
                <TextBlock Grid.Row="2" Text="Стоимость упаковки = " Margin="5"/>
                <TextBlock Grid.Row="3" Text="Часовая ставка = " Margin="5"/>
                <TextBlock Grid.Row="4" Text="накладные расходы 20% = " Margin="5"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Name="sebest" Margin="5"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Name="dec" Margin="5"/>
                <TextBlock Grid.Column="1" Grid.Row="2" Name="up" Margin="5"/>
                <TextBlock Grid.Column="1" Grid.Row="3" Name="time" Margin="5"/>
                <TextBlock Grid.Column="1" Grid.Row="4" Name="naklad" Margin="5"/>

            </Grid>

        </Grid>
    </ScrollViewer>
</mah:MetroWindow>
